# ContextGrid Configuration
# Copy this file to .env and update with your settings

# =========================
# CLI Mode Configuration
# =========================

# USE_API: Choose how the CLI connects to the database
# - true: CLI makes HTTP requests to the API server (requires API server to be running)
# - false: CLI connects directly to the database
# Default: true (uses API)
USE_API=true

# API_URL: Base URL for the API server (used when USE_API=true)
# Default: http://localhost:8000
API_URL=http://localhost:8000

# =========================
# Database Backend Selection
# =========================

# DB_TYPE: Choose database backend
# Options: sqlite, mysql
# Default: sqlite
DB_TYPE=sqlite

# =========================
# SQLite Configuration (when DB_TYPE=sqlite)
# =========================

# DB_PATH: Path to SQLite database file
# Default: data/projects.db
DB_PATH=data/projects.db

# =========================
# MySQL Configuration (when DB_TYPE=mysql)
# =========================

# MySQL connection settings
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=contextgrid
MYSQL_USER=contextgrid_user
MYSQL_PASSWORD=your_secure_password_here

# =========================
# API Server Configuration
# (Only needed if running the API server)
# =========================

# API server host and port
API_HOST=0.0.0.0
API_PORT=8000

# Database settings for API server
# Note: The API server uses these variables from api/config.py
# For API server, rename these to DB_* if needed, or use the same MYSQL_* variables
DB_HOST=localhost
DB_PORT=3306
DB_NAME=contextgrid
DB_USER=contextgrid_user
DB_PASSWORD=your_secure_password_here

# =========================
# Usage Examples
# =========================

# Example 1: SQLite + Direct CLI (no API server needed)
# USE_API=false
# DB_TYPE=sqlite
# DB_PATH=data/projects.db

# Example 2: SQLite + API + CLI (for local testing)
# USE_API=true
# API_URL=http://localhost:8000
# DB_TYPE=sqlite  # In API server config
# DB_PATH=data/projects.db  # In API server config

# Example 3: MySQL + API + CLI (recommended for production)
# USE_API=true
# API_URL=http://localhost:8000
# DB_TYPE=mysql  # In API server config
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_DATABASE=contextgrid
# MYSQL_USER=contextgrid_user
# MYSQL_PASSWORD=your_secure_password

# Example 4: MySQL + Direct CLI (no API server)
# USE_API=false
# DB_TYPE=mysql
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_DATABASE=contextgrid
# MYSQL_USER=contextgrid_user
# MYSQL_PASSWORD=your_secure_password
